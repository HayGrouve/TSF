<%- include("./partials/header") %>

<!-- Content -->
<section>
    <h1 class="sport-headding">Add <i class="fas fa-futbol"></i> Football Forecasts</h1>
    <!-- Start of table  -->
    <form action="#">
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Host</th>
                    <th scope="col">Guest</th>
                    <th scope="col">Coef</th>
                    <th scope="col">Forecast</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="date" name="date" required></td>
                    <td><input type="time" name="time" required></td>
                    <td>
                        <select name="flag">
                            <option value="https://upload.wikimedia.org/wikipedia/en/9/9a/Flag_of_Spain.svg">
                                Flag_of_Spain
                            </option>
                            <option value="https://upload.wikimedia.org/wikipedia/en/b/be/Flag_of_England.svg">
                                Flag_of_England
                            </option>
                        </select>
                        <input type="text" name="host" placeholder="Host" required>
                    </td>
                    <td>
                        <select name="flag">
                            <option value="https://upload.wikimedia.org/wikipedia/en/9/9a/Flag_of_Spain.svg">
                                Flag_of_Spain
                            </option>
                            <option value="https://upload.wikimedia.org/wikipedia/en/b/be/Flag_of_England.svg">
                                Flag_of_England
                            </option>
                        </select>
                        <input type="text" name="guest" placeholder="Guest" required>
                    </td>
                    <td><input type="number" name="coef" placeholder="Coef" min="1" step="0.05" required></td>
                    <td><input type="text" name="forecast" placeholder="Forecast" required></td>
                </tr>
            </tbody>
        </table>
        <!-- End of table  -->
        <button class="btn btn-lg btn-success">Submit</button>
    </form>
</section>

<%- include("./partials/footer") %>